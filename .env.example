# AI Shield Environment Configuration

# Environment
ENV=production
DEBUG=false

# Database
DB_USER=ai_shield
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://ai_shield:your_secure_password_here@localhost:5432/ai_shield_db

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS & Allowed Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://aishield.io

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=/tmp/ai_shield_uploads

# External APIs
OPENAI_API_KEY=sk-your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# Stripe Configuration
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=noreply@aishield.io

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Scanning Configuration
SCAN_TIMEOUT_SECONDS=300
MAX_CODE_SIZE_MB=100
